/* pages/person/myorder/refundDetail/refundDetail.wxss */
@import "/common/style/stylesheet.wxss";
page{
   background-color: #efeff4;
   font-size: 26rpx;
}
.footer-bar {
    position: fixed;
    height: 88rpx;
    line-height:  88rpx;
    text-align: center;
    color: #000;
    font-size: 28rpx;
    background-color: #fff;
    left: 0;
    right: 0;
    bottom: 0;
}
.icon{
      color: #007aff;
}
.content{
  background-color: #efeff4;
}
.header{
    font-size: 34rpx;
    color: #fff;
    height: 100rpx;
    padding: 0 24rpx;
    position: relative;
    background: linear-gradient(to right, #fd7609, #f95211);
}
.inner {
    position: absolute;
    bottom: 18rpx;
}
.bar {
    padding: 20rpx 24rpx 10rpx 24rpx;
    background-color: #fff;
}
.mall-tip {
     padding: 20rpx 0;
    border-bottom: 1px solid #e5e5e5;
    color: #000;
    font-size: 30rpx;
    margin-top: -20rpx;
}
.sj{
    padding: 20rpx 0;
    border-bottom: 1px solid #e5e5e5;
}
p {
    color: rgb(152, 152, 152);
    margin-bottom: 0;
    font-size: 28rpx;
    margin-top: 0;
}
.btn {
    color: rgb(152, 152, 152);
    border: 1px solid rgb(152, 152, 152);
    padding: 14rpx 24rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    display: inline-block;
}
.bars {
    text-align: right;
    border-bottom: 0!important;
}

.box{
    position: relative;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    list-style: none;
    background-color: #fff;

}
.item{
    padding: 30rpx 24rpx;
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
    background-color: #fff;
    position: relative;
    margin: 10rpx 0;
}


.top {
    position: relative;
    padding-bottom: 20px;
    overflow: hidden;
}
.hg-link{
border-top: 1px solid #e5e5e5;
margin-top: -20rpx;
border-bottom: 1px solid #e5e5e5;
position: relative;
/* margin: -30rpx -24rpx; */
display: block;
overflow: hidden;
padding: inherit;
white-space: nowrap;
text-overflow: ellipsis;
}


.img {
    line-height: 160rpx;
    max-width: 166rpx;
    height: 160rpx;
    margin-right: 30rpx;
}
.body {
    overflow: hidden;
}

.mui-ellipsis-2 {
    display: -webkit-box;
    color: #000;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.numbox {
    position: absolute;
    bottom: 20rpx;
    right: 24rpx;
    color: #000;
}
.short {
    padding-top: 50rpx;
    color: #8f8f94;
}

