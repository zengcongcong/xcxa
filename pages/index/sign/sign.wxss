/* pages/index/sign/sign.wxss */
@import "/common/style/stylesheet.wxss";

page{
      background: linear-gradient(rgb(238, 47, 75), rgb(238, 54, 40));
}
.wrap {
    min-height: 100%;
    background: linear-gradient(rgb(238, 47, 75), rgb(238, 54, 40));
}
.top-banner>image{
  width: 100%;
  height: 300rpx;
}
.txt {
    padding: 16rpx 24rpx;
    background-color: rgba(0, 0, 0, .5);
    color: #fff;
    position: absolute;
    left: 24rpx;
    top: 28rpx;
    border-radius: 60rpx;
}
.divider-line1 {
    position: relative;
    width: 100%;
    height: 130rpx;
}
.divider-line1-text {
    position: absolute;
    width: 90rpx;
    height:  90rpx;
    border-radius: 45rpx;
    border:1px #F28C60 dashed;
    top: 6rpx;
    left: 38rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
    word-break: break-all;
    overflow: hidden;
    background-color: red;
    z-index: 333;
}
.both{
    display: inline-block;
    font-size: 15px;
    color: #fff;
}
.iconfont {
  z-index: 333;
}
.curno {
    color: rgb(233, 161, 26);
    font-size: 28rpx;
}
.totno {
    color: #FFFFFF;
    font-size: 24rpx;
}
.line-css {
     width: 100%;
     top:42rpx;
     height: 2rpx;
    position: absolute;
    border-bottom:1px #F28C60 dotted;
}
.subject {
    text-align: center;
    position: relative;
    top: 80rpx;
    font-size: 26rpx;
    color: #fff;
}
.stars {
    height: 96px;
    overflow-y: hidden;
}

.stars {
    height: 100%;
    padding-top: 20rpx;
    overflow-x: scroll;
    overflow-y: hidden;
}
#stars{
    padding-bottom: 40rpx;
}

#stars{
    display: inline-block;
    word-break: keep-all;
    white-space: nowrap;
    margin: 0px;
    padding: 0px 0 0 8rpx;
    font-size: 0px;
}
.list {
    position: relative;
    display: inline-block;
    padding: 0px 8rpx;
    font-size: 28rpx;
}
.list>image{
  width:140rpx;
  height: 180rpx;
}
.starts-text {
    position: absolute;
    width: 70rpx;
    height: 70rpx;
    top: 18rpx;
    left: 46rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
}
.divider-line2 {
    position: relative;
    width: 100%;
    text-align: center;
    padding: 60rpx 0px;
}
.lines{
   position: relative;
    width: 100%;
    text-align: center;
}
.line{
   position: absolute;
    top: 21px;
    width: 100%;
    border-bottom: 1px #FEF000 dashed; 
}
.lines>image{
  position: relative;
  width: 240rpx;
  height: 88rpx;
  z-index: 999;
}
.description {
    font-size: 30rpx;
    color: #fff;
    padding: 0 24rpx 40rpx 24rpx;
}
.description>.title {
    margin: 0;
    padding-bottom: 20rpx;
}
.bg {  
  display: none;  
   position: absolute;   
  top: 0;
  left: 0; 
  width: 100%;  
  height: 100%; 
  background-color: black;  
  z-index: 1001;  
  -moz-opacity: 0.7;  
  opacity: 0.70;  
  filter: alpha(opacity=70);  
} 
.tupo{
  z-index: 99999999999999;
} 
 .shows{
   display: block;
 } 
 .hide{
   display: none;
 }
.show {  
  display: none;    
  text-align: center;  
  position: absolute; 
  top: 0; 
  left: 0; 
  width: 100%;  
  height: 60%;  
  z-index: 1002;  
  overflow: auto;  
}  
.showmodal.active .bg,
.showmodal.active .show{
  display: block;
}
.popSignR {
    position: fixed;
    width: 100%;
    z-index: 1001;
     top: 80rpx; 
   
}
.popSignRboth{
  /* width: 100%; */
  height: 100%;
  margin: 0px 48px;
}
.popSignR .pop-top {
    position: relative;
    width: 100%;
    background: #FFFFFF;
    text-align: center;
    border-radius: 10px;
    padding-bottom: 100rpx;
}
.popSignR .pop-get-point {
    position: absolute;
    left: 0px;
    right: 0px;
    top: 18%;
    text-align: center;
}
.popSignR .pop-tip-msg {
    position: relative;
    width: 100%;
    height: 0px;
    top: -80rpx;
    left: 0px;
}
.pop-cont{
  font-size: 28rpx;
  margin-top: 50rpx;
}
.pop-closed {
    width: 88rpx;
    margin: 74rpx auto 0;
}
.dlg-msg-text1>text,.dlg-msg-text2>text{
  color:rgb(239, 149, 44);

}
.pop-top image{
    width: 100%;
    height: 270rpx;
}
.dlg-box {
    position: fixed;
    width: 100%;
    z-index: 1001;
    top: 80rpx;
}
.dlg-wrap {
    margin: 0px 48rpx;
}
 .dlg-content {
    position: relative;
    width: 100%;
    background: #FFFFFF;
    text-align: center;
    border-radius: 20rpx;
      font-size: 26rpx;
    padding: 100rpx 0px 60rpx 0px;
}
.dlg-content>image{
  width: 204rpx;
  height:   150rpx;
}
.red{
  color: rgb(240, 28, 36);
}
.jl{
  color: rgb(239, 149, 44);
}
.dlg-box .dlg-close {
    width: 88rpx;
     margin: 74rpx auto 0; 
  
}
.icon-guanbi {
    font-size: 96rpx;
    color: #fff;
}
.jf{
    display: inline-block;
    color: #de2727;
    font-size: 66rpx;
    font-weight: bold;
}
