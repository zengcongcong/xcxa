/* pages/Coupon/Coupon.wxss */
page{
    font-family: 'Helvetica Neue',Helvetica,sans-serif;
    font-size: 32rpx;
    line-height: 40rpx;
    color: #000;
    background-color: #efeff4;
}
#hgControl{
    width: 100%;
    height: 70%;
    background-color: #fff;
    position: relative;
    bottom: auto;

}
.tab-left{  
    width: 200rpx;  
    line-height: 160%;  
    border-right: solid 1px gray;  
}  

.mui-segmented-control{
    font-size: 28rpx;
    font-weight: 400;
}
#hgControl view{
  text-align: center;
  display: inline-block;
  width: 33.3%;
}
.list{
margin: 10rpx 0;
background-color: rgb(243, 144, 27);
display: flex;
height: 100%;
border: none;
width: 100%;
position: relative;
display: -webkit-box;
display: -webkit-flex;
}
 .info-box{
    padding: 36rpx 0;
    margin: 0 20rpx;
    position:relative;
    height: 100%;
    display: flex;
    text-align: left;
    box-sizing: border-box;
 }
 .mui-control-item{
   padding:20rpx 0 ;
 }
 .coupon-money{
  width:100%;
  color:#fff;
  display: flex;
  align-items: center;
  text-align: left;
 }
.lay.of {
  margin-right: 12rpx;
}
.lay {
font-size: 26rpx;
}
.get-btn{
position:absolute;
width: 26%;
height: 100%;
color: rgb(25, 137, 209);
padding: 60rpx 0;
font-size: 26rpx;
right:0;
box-sizing: border-box;
text-align: center; 
background-color: #e8e8e7;
}
.lay:last-child {
flex: 1;
padding: 0;
}
.active{
  border-bottom: 2px red solid;
}
.show{
  display: inline-block;
}
.hide{
  display:none;
}
#content_empty .tip-empty-box {
    text-align: center;
    padding: 50rpx 0px;
}
#content_empty .tip-empty-box image{
    width: 400rpx;
    height:400rpx;
    display: block;
    margin: 0 auto;
}
.tip-empty-txt{

  padding-top: 30rpx;
}
.modal-body{
  padding:0 20rpx;
}