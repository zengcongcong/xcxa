
 .animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  bottom:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6); 
  transform:translateY(200vh);
  z-index: 1000;
}
.animation-element {
  position: fixed;
  width: 100%;
  height: 480rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
  z-index: 1002;
}
.tool-bar{
  height: 40px;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-align-items: center;
  align-items: center;
  font-size: 16px;
  color:#666;
  padding: 6px 0;
  position: relative;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  z-index: 100;
}
.search{
border: 1rpx solid #eee;
text-align: center;
border-radius: 15px;
white-space: nowrap;
width: 30%;
padding: 10rpx;
font-size: 12px;
color: #ccc; 
}
.pick-button{
  padding: 0 12px;
  display: inline-flex;
}
.pick-btn-confirm{
  color: #48c23d;
}
picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  bottom: 0;
  position: fixed;
  text-align: center;
  height: 400rpx;
} 
.infoText{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}