/**app.wxss**/

::-webkit-scrollbar {/*滚动条里面小方块*/
        width: 0;
        height: 0;
        color: transparent;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
   align-items: center; 
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 
/* 从底部滑出 */


.dp{
  width: 100%;
  height: 60rpx;
}
.dp .radio{
  position: absolute;
  right:60rpx;
}

.fl{
  float:left;
}
.fr{
  float:right;
}
/* 从底部滑出 */
.maskLayer{
  position:fixed; 
  top: 0%;  
  left: 0%;  
  width: 100%;  
  height: 1000%;  
  background-color: black;  
  z-index: 1001;  
  -moz-opacity: 0.7;  
  opacity: 0.70;  
  filter: alpha(opacity=70);  
}
.choose{
  text-align: center;  
  position:fixed;  
  /* top: 30%;   */
  width: 100%;  
  height: 70%;  
  top: 30%;
  background-color: white;  
  z-index: 1002;  
  overflow: auto;  
}

.complate{
  position: fixed;
  bottom:0;
  width: 100%;
  height:92rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 28rpx;
  background-color:#dd524d;
  z-index: 100000000000;
  color:#Fff;
}
.show{
  width: 100%;
  text-align: left;
  display: inline-block;
}
.hide{
  display: none;
}
